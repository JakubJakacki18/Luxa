@model Luxa.Models.Photo

@{
    ViewData["Title"] = "Edit Photo";
}

<h1>Edit Photo</h1>

<h4>Photo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
