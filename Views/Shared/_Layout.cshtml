<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Luxa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/photoPageStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Luxa.styles.css" asp-append-version="true" />
</head>
<style>
    :root {
        --darker-violet: #2b2735;
        --dark-violet: #373341;
        --light-violet: #4C3C78;
        --lighter-violet: #614D99;
        --yellowish: #FAF0E6;
    }
     top-line {
         border-top: 1px solid black;
     }
     .footer .container a {
         text-decoration: none;
        color: var(--yellowish);
     }
     .yellowish {
        color: var(--yellowish);
     }

     body {
        background: var(--darker-violet);
        color: var(--yellowish);
     }

     .navbar {
         background-color: var(--dark-violet);
     }

     .footer {
         background-color: var(--dark-violet);
     }

     .card {
        background: var(--dark-violet);
        color: var(--yellowish);
     }

     .btn-primary {
        border-color: var(--lighter-violet);
        background-color: var(--lighter-violet);
     }

     .btn-primary:hover {
        border-color: var(--light-violet);
        background-color: var(--light-violet);
     }

     td, th {
         color: var(--yellowish);
     }
</style>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Luxa</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div id="nav-tabs" class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        @* <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Strona domowa</a>
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Discover">Odkrywaj</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Photos" asp-action="Create">Dodaj zdjęcie</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Contact" asp-action="UserContact">Kontakt</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial.cshtml" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer yellowish top-line box-shadow">
        <div class="container">
            &copy; 2024 - Luxa - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
