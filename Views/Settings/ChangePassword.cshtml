@model Luxa.ViewModel.PasswordChangeVM

<div class="container">
	<div class="row">
		@await Component.InvokeAsync("SettingsMenu")
		<div class="col-md-9">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title" id="itemHead">Zmień hasło</h5>
					<form method="post" asp-controller="Settings" asp-action="ChangePassword">
					<div class="mb-1">
						<label asp-for="OldPassword" class="control-label"></label>
						<input asp-for="OldPassword" class="form-control" /><br />
						<span asp-validation-for="OldPassword" class="text-danger"></span>
					</div>
					<div class="mb-1">
						<label asp-for="NewPassword" class="control-label"></label>
						<input asp-for="NewPassword" class="form-control" /><br />
						<span asp-validation-for="NewPassword" class="text-danger"></span>

					</div>
					<div class="mb-1">
						<label asp-for="ConfirmNewPassword" class="control-label"></label>
						<input asp-for="ConfirmNewPassword" class="form-control" /><br />
						<span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
					</div>
					<input type="submit" value="Zmień hasło" class="btn btn-primary float-end" />
					</form>
					@ViewData["Message"]
				</div>
			</div>
		</div>
	</div>
