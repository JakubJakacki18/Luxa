@{
	ViewData["Title"] = "Logowanie";
	Layout = "_NoNavbarFooterLayout";
}
@model Luxa.ViewModel.SignInVM
<style>
	:root {
		--darker-violet: #2b2735;
		--dark-violet: #373341;
		--light-violet: #4C3C78;
		--lighter-violet: #614D99;
		--yellowish: #FAF0E6;
	}

	body {
		background-color: #4A4A4A;
		background-image: url("/Image/landingBG.png");
	}

	.btn-primary {
		border-color: var(--lighter-violet);
		background-color: var(--lighter-violet);
	}

	.btn-primary:hover {
		border-color: var(--light-violet);
		background-color: var(--light-violet);
	}

	.col {
		background: var(--dark-violet);
	}

	.col label {
		color: var(--yellowish);
	}

	.row {
		margin-top: 10%;
	}
</style>
<div class="row d-flex align-itemsalign-content-center justify-content-center">
	<div class="col col-md-3 card p-3">
		<h3 class="text-center text-info text-light">Zaloguj się!</h3>
			<form method="post" asp-controller="Account" asp-action="SignIn">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="mb-1">
					<label asp-for="UserName" class="form-label"></label>
					<input asp-for="UserName" class="form-control" /><br />
					<span asp-validation-for="UserName" class="text-danger"></span>
				</div>
				<div class="mb-1">
					<label asp-for="Password" class="form-label"></label>
					<input asp-for="Password" class="form-control" /><br />
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>
				<div class="mb-1">
					<label class="form-check-label">
						<input asp-for="RememberMe" class="form-check-input" /> @Html.DisplayNameFor(a => a.RememberMe)<br />
					</label>
					<input type="submit" value="Zaloguj się" class="btn btn-primary btn-sm float-end" />
				</div><br><br><br>
				<div class="mb-1">
					<label>Nie masz konta?</label>
					<button type="button" onclick="location.href='@Url.Action("SignUp", "Account")'" class="btn btn-primary btn-sm float-end">Zarejestruj się!</button>
				</div>
			</form>
			<div class="mb-1">
				<hr />
				<a class="btn btn-danger btn-block" href="@Url.Action("SignInGoogle", "Account")">Zaloguj się przez Google</a>
			</div>
	</div>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}